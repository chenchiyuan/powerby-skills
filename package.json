{
  "name": "powerby-skills",
  "version": "2.5.0",
  "description": "PowerBy Skills - AI驱动的产品开发流程技能包，覆盖P0-P8完整生命周期",
  "type": "module",
  "keywords": [
    "claude",
    "claude-code",
    "skills",
    "ai",
    "product-development",
    "mvp",
    "architecture",
    "engineering",
    "code-review",
    "pm",
    "product-manager"
  ],
  "author": "PowerBy Team",
  "license": "MIT",
  "homepage": "https://github.com/your-org/powerby-skills",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/powerby-skills.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/powerby-skills/issues"
  },
  "claudeSkills": {
    "marketplace": "./.claude-plugin/marketplace.json",
    "version": "1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "skills/",
    ".claude-plugin/",
    "docs/"
  ],
  "scripts": {
    "lint": "echo 'Running lint checks...' && exit 0",
    "format": "echo 'Formatting code...' && exit 0",
    "format-check": "echo 'Checking code format...' && exit 0",
    "test": "echo 'Running tests...' && exit 0",
    "test:integration": "echo 'Running integration tests...' && exit 0",
    "test:e2e": "echo 'Running E2E tests...' && exit 0",
    "security:check": "echo 'Running security checks...' && exit 0",
    "build-docs": "echo 'Building documentation...' && mkdir -p dist/docs && cp -r docs/* dist/docs/",
    "changelog": "echo '# Changelog' > CHANGELOG.md && echo '' >> CHANGELOG.md && git log --oneline --pretty=format:'- %s (%h)' >> CHANGELOG.md",
    "validate-docs": "python3 .github/workflows/scripts/validate-iteration-docs.py",
    "update-iteration": "python3 .github/workflows/scripts/update-iteration-status.py",
    "pre-commit": "npm run lint && npm run format-check && npm run validate-docs"
  },
  "devDependencies": {},
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
